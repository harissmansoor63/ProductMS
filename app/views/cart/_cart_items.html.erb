<% @order_items.each do |item| %>
  <h3><%= item.product.title %></h3>
  <h3><%= item.product.price %></h3>
  <%= form_with model: item do |f|%>
    <%= f.hidden_field :product_id, value: item.product.id %>
    <%= f.number_field :quantity, value: item.quantity.to_i %>
    <%= f.submit "Update Cart"%>
    <%= link_to "Remove Items", item, method: :delete, remote: true%>
  <%end%>
  <h2>Subtotal: <%= item.total%></h2>
<%end%>

<h3>your current order has total of: <%= current_order.subtotal%></h3>


<table class="table table-light">
  <thead class="thead-dark ">
    <tr>
      <th>Product<th>    
      <th>Price</th>
      <th>Quantity</th>
      <th>Update</th>
      <th>Remove</th>
      <th>SubTotal<th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <% @order_items.each do |item| %>
    <%= form_with model: item do |f|%>
      <tbody> 
        <tr>
          <td><%= item.product.title %></td>
          <td style="width:200px; height:auto"><%= image_tag(item.product.image, style:'width:100%') %></td>
          <td><%= item.product.price %></td>
            <%= f.hidden_field :product_id, value: item.product.id %>
            <td><%= f.number_field :quantity, value: item.quantity.to_i %></td>
            <td><%= f.submit "Update Cart"%></td>
            <td><%= link_to "Remove Items", item, method: :delete, remote: true%></td>
          <td><%= item.total%></td>
        </tr>
      </tbody>
    <%end%>
  <%end%>
</table>

<h3>your current order has total of: <%= current_order.subtotal%></h3>

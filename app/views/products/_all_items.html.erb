<% @products.each do |product| %>

<div class="container mb-5 mt-5">
    <div class="row">
        <div class="col-md-4">    
          <div class="d-flex justify-content-center container mt-3">
            <div class="card p-3 bg-white">
              <div class="text-center mt-2">
                <div>
                  <%= image_tag(product.image, style:'width:100%') %>
                </div>
                <div>
                    <h4><%= product.title %></h4>
                    <h6 class="mt-0 text-black-50">ID: <%= product.id %></h6>
                </div>  
              </div>        
              <div class="d-flex justify-content-between total font-weight-bold mt-4">Total<h6>$<%=product.price%></h6>
              </div>
              <%= link_to 'Show', product_path(product), class:"btn btn-default" %>
              <%= form_with model: @order_item do |f|%>
                  <%= f.number_field :quantity, value: 1, min: 1 %>
                  <%= f.hidden_field :product_id, value: product.id %>
                  <%= f.submit "Add to Cart" %>
              <%end%>
            </div>
            
          </div>
        </div>    
    </div>
</div>
<%end%>

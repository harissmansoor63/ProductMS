<table class="table table-light">
  <thead class="thead-dark ">
    <tr>
      <th>User_id</th>
      <th>Subtotal</th>
      <th>Address</th>
      <th>Payment Option</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <% @orders.each do |order| %>
    <tr>
      <td><%= order.user_id %></td>
      <td><%= order.subtotal %></td>
      <td><%= order.address %></td>
      <td><%= order.payment_information %></td>
      <td><%= link_to 'Show', admin_order_path(order) %></td>
    </tr>
  <% end %>
</table>

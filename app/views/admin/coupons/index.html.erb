<%= link_to 'New Coupon', new_admin_coupon_path, class: "btn btn-default" %>
<%= link_to 'Download CSV list', admin_coupons_path(format: :csv), class: "btn btn-default" %>

<%= form_tag(admin_coupons_path, method: :get) do %>
  <p>Search for a coupon</p>
  <%= text_field_tag(:search, params[:search]) %>
  <%= submit_tag("Search") %>
<% end %>

<table class="table table-light">
  <thead class="thead-dark ">
    <tr>
      <th><%= sortable "id" %></th>
      <th><%= sortable "title", "Code Name" %></th>
      <th><%= sortable "discount", "Discount Value" %></th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <% @coupons.each do |coupon| %>
    <tr>
      <td><%= coupon.id %></td>
      <td><%= coupon.title %></td>
      <td><%= coupon.discount %> %</td>
      <td>
        <%= link_to 'Show', admin_coupon_path(coupon) %>
        <%= link_to 'Edit', edit_admin_coupon_path(coupon) %>
        <%= link_to 'Destroy', admin_coupon_path(coupon), method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>

<%= paginate @coupons, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm justify-content-center", nav_class: "d-inline-b" %>

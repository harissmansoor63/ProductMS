<%= link_to 'New Product', new_admin_product_path, class: "btn btn-default" %>

<%= link_to 'Download CSV list', admin_products_path(format: :csv), class: "btn btn-default" %>

  <%= form_tag(admin_products_path, method: :get) do %>
    <p> Search for a product </p>
    <%= text_field_tag(:search, params[:search]) %>
    <%= submit_tag ("Search") %>
  <% end %>

<table class="table table-light">
  <thead class="thead-dark ">
    <tr>
      <th><%= sortable "id" %></th>
      <th><%= sortable "title" %></th>
      <th><%= sortable "price" %></th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <% @products.each do |product| %>
    <tr>
      <td><%= product.id %></td>
      <td><%= product.title %></td>
      <td><%= product.price %></td>
      <td>
        <%= link_to 'Show', admin_product_path(product) %>
        <%= link_to 'Edit', edit_admin_product_path(product) %>
        <%= link_to 'Destroy', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>

<%= paginate @products, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm justify-content-center", nav_class: "d-inline-b" %>
